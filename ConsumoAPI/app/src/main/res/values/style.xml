<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationView" >
        <item name="fontFamily">@font/cerealmedium</item>
    </style>

    <style name="labelBlackMedium" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="labelGrayMedium" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="bigTitle" >
        <item name="android:fontFamily">@font/cerealmedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="title" >
        <item name="android:fontFamily">@font/cerealmedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="subTitle" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="textBlack" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="textMedium" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="listTitleGroup" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="listTitle" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="listSubtitleDescription" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="msgError" >
        <item name="android:fontFamily">@font/cerealbook</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <!-- Avatar -->
    <style name="profileNameAvatar" >
        <item name="android:fontFamily">@font/cerealmedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="btnOrange" >
        <item name="android:fontFamily">@font/cerealmedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="Widget.MaterialComponents.MaterialCalendar.HeaderTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorSurface">@android:color/transparent</item>
    </style>
    <style name="RoundedSquare">
        <item name="cornerSize">10dp</item>
    </style>
</resources>